@model SlnEjerciciosPropuestos.Models.ClsEjercicio7
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h1>DIBUJO DE FIGURAS</h1>
        <br />
        @using (Html.BeginForm("Index", "Ejercicio7", FormMethod.Post))
        {
            <p>
                @Html.LabelFor(model => model.caracter, "Ingrese caracter a dibujar : ")
                @Html.EditorFor(model => model.caracter)
            </p>
            <p>
                @Html.LabelFor(model => model.filas, "Ingrese filas a dibujar : ")
                @Html.EditorFor(model => model.filas)
            </p>
            <p>
                @Html.RadioButtonFor(model => model.alineacion, "1") ALINEACION IZQUIERDA<br />
                @Html.RadioButtonFor(model => model.alineacion, "2") ALINEACION AL MEDIO<br />
                @Html.RadioButtonFor(model => model.alineacion, "3") ALINEACION DERECHA<br />
            </p>
            
            <input type="submit" value=" CREAR FIGURA " />
            <br />
            <br />
            <br />
            if(Session["i"] == null)
            {
                Session["i"] = 1;
            }
            else
            {
                int cont = Convert.ToInt32(Session["i"]);
                Session["i"] = cont++;
                <div style="line-height: 0px">
                         @for(int i = 0; i < Model.filas; i++)
                         {
                             <pre style="margin-top:inherit">@Model.dibujo[i].ToString()</pre><br/>
                         }
                </div>
            }
        }
    </div>
</body>
</html>
