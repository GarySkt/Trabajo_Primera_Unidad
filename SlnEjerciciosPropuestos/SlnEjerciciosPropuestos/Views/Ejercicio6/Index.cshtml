@model  SlnEjerciciosPropuestos.Models.ClsEjercicio6
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h2>ALQUILER DE VEHICULOS</h2>
        <br />
        @using (Html.BeginForm("Index", "Ejercicio6", FormMethod.Post))
        {
            <h3><b>Elija el tipo de auto : </b></h3>
            <p>
                @Html.RadioButtonFor(model => model.tipoauto, "1") Auto Pequeno --> S/. 15 x Día<br />
                @Html.RadioButtonFor(model => model.tipoauto, "2") Auto Pequeno --> S/. 20 x Día<br />
                @Html.RadioButtonFor(model => model.tipoauto, "3") Auto Pequeno --> S/. 30 x Día<br />
            </p>
            <p>
                @Html.LabelFor(model => model.dias, "Ingrese días a usar : ")
                @Html.EditorFor(model => model.dias)
            </p>
            <p>
                @Html.LabelFor(model => model.kms, "Ingrese kilometros utilizados : ")
                @Html.EditorFor(model => model.kms)
            </p>
            
            <input type="submit" value=" CALCULAR CUENTA " />
            <br />
            <br />
            <br />
            if(Session["i"] == null)
            {
                Session["i"] = 1;
            }
            else
            {
                int cont = Convert.ToInt32(Session["i"]);
                Session["i"] = cont++;
                <p>MONTO TOTAL : S/. <b>@(Model.monto)</b></p>
            }
        }
    </div>
</body>
</html>
