@using PracticaU1_ejercicio01.Models;
@model IList<PracticaU1_ejercicio01.Models.ClsConcursoProyectos>

@{
    ViewBag.Title = "IndexConcursoProyectos";
}

<br />
<h2>Registrar Proyectos</h2>
<br />
<br />




@using (Html.BeginForm("agregar", "ConcursoProyectos", FormMethod.Post))
{
    <!--agrega Datos-->

    ClsConcursoProyectos objConcursoProy = new ClsConcursoProyectos();


    <!-- START CONTAIN-->

    <div class="form-group">
        <label>Categoria</label>
        <input type="text" class="form-control" name="CategoriaProyecto" placeholder="Ingrese la categoria del proyecto" />
    </div>
    <div class="form-group">
        <label>Tema</label>
        <input type="text" class="form-control" name="TemaProyecto" placeholder="Ingrese el tema del proyecto" />
    </div>
    <div class="form-group">
        <label>Integrantes</label>
        <input type="text" class="form-control" name="IntegrantesProyecto" placeholder="Ingrese el número de integrantes" />
    </div>
    <div class="form-group">
        <label>Curso</label>
        <input type="text" class="form-control" name="Curso" placeholder="Ingrese el curso del proyecto" />
    </div>
    <div class="form-group">
        <label>Docente</label>
        <input type="text" class="form-control" name="DocenteCurso" placeholder="Ingrese nombre del docente asesor" />
    </div>
    <input type="submit" value="Agregar Proyecto" class="btn btn-success" />
}
<br /><br /><br />






<!--   AGREGADO PARA ENVIAR A OTRA PAGINA -->



                                                               





<!--   START MUESTRA DATOS EN TABLA -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>categoria</th>
            <th>Tema</th>
            <th>Integrantes</th>
            <th>Curso</th>
            <th>Docente</th>
        </tr>
    </thead>
    <tbody>
        @if (Session["i"] == null)
        {
            Session["i"] = 1;
        }
        else
        {
            int cont = Convert.ToInt32(Session["i"]);
            cont++;
            Session["i"] = cont;
            foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.CategoriaProyecto
                    </td>
                    <td>
                        @obj.TemaProyecto
                    </td>
                    <td>
                        @obj.IntegrantesProyecto
                    </td>
                    <td>
                        @obj.Curso
                    </td>
                    <td>
                        @obj.DocenteCurso
                    </td>
                </tr>
            }
        }
    </tbody>

</table><br /><br /><br />
<!--   END MUESTRA DATOS EN TABLA -->




@using (Html.BeginForm("sortear", "ConcursoProyectos", FormMethod.Post))
